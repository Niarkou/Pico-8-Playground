pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
--
-- standard pico-8 workflow
--

function _init()
  player = {x = 64, y = 64}
end

function _update()
  update_play()
end

function _draw()
  draw_world()
  draw_player()
end

--
-- play handling
--

function update_play()
  if btn(0) then
    player.x -= 1
  end
  if btn(1) then
    player.x += 1
  end
  if btn(2) then
    player.y -= 1
  end
  if btn(3) then
    player.y += 1
  end
end

--
-- drawing
--

function draw_player()
  spr(1, player.x - 4, player.y - 4)
end

function draw_world()
  map(0,0,0,0,32,32)
end

