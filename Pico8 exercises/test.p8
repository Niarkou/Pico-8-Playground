__lua__

#include ../escarlib/random.lua

player = {x=8, y=24, spr={17,18}, anim=1}


function _init()
   t=0
   steps={}
end

function _update()
    update_anim()
    update_player()
end

function update_anim()
    local a = rnd(1)
    if a > 0.99 then
        player.anim = 2
        t = 20
    elseif t < 1 then
        player.anim = 1
    end
    t -= 1
end

function update_player()
    local x0=player.x
    local y0=player.y
    
    if btnp(0) and not wall(x0-8,y0,0,0) then
        player.x -= 8
        add(steps, {x=x0+3, y=y0+6})
        add(steps, {x=x0+7, y=y0+4})
    elseif btnp(1) and not wall(x0+8,y0,0,0) then
        player.x += 8
        add(steps, {x=x0+3, y=y0+6})
        add(steps, {x=x0+7, y=y0+4})
    elseif btnp(2) and not wall(x0,y0-8,0,0) then
        player.y -= 8
        add(steps, {x=x0+6, y=y0+3})
        add(steps, {x=x0+4, y=y0+7})
    elseif btnp(3) and not wall(x0,y0+8,0,0) then
        player.y += 8
        add(steps, {x=x0+6, y=y0+3})
        add(steps, {x=x0+4, y=y0+7})
    end
end

function wall(x,y,w,h)
  local s = mget((x+w)/8,(y+h)/8)
  local t = mget((x-w)/8,(y-h)/8)
  if fget(s, 0) or fget(t, 0) then
    return true
  end
end

function _draw()
    cls(0)
    map()
    camera(min(max(player.x - 56, 0), 160), min(max(player.y - 56,0), 58))
    spr(player.spr[player.anim], player.x, player.y)
    foreach(steps, function(s)
        pset(s.x,s.y,8)
    end)
end

